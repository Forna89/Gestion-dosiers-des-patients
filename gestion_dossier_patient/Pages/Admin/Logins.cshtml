@page
@model gestion_dossier_patient.Pages.Admin.Logins
@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-4">
        <div class="container">
            <form action="" method="post">
                <br>
                <div class="form-group text-center">
                    <label asp-for="log.Username" class="form-label">
                        
                    </label>
                    <input asp-for="log.Username" type="text" class="form-control form-control-sm" placeholder="nom utilisateur"
                        aria-label=".form-control-sm example" required>
                </div>
                <br>
                <div class="form-group text-center">
                    <label asp-for="log.Password" class="form-label">
                        
                    </label>
                    <input asp-for="log.Password" type="password" class="form-control form-control-sm" placeholder="mot de passe"
                        aria-label=".form-control-sm example" required>
                </div>
                <br>
                
                
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Se connecter</button>
                </div>
            </form>
        </div>
    </div>
</div>