@page
@model gestion_dossier_patient.Pages_Dossier_patients.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Dossier_patient</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dossier_patient.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dossier_patient.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dossier_patient.Prenom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dossier_patient.Prenom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dossier_patient.Sexe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dossier_patient.Sexe)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dossier_patient.Tel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dossier_patient.Tel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dossier_patient.Adresse)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dossier_patient.Adresse)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dossier_patient.Date_Enregistrement)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dossier_patient.Date_Enregistrement)
        </dd>
    </dl>
</div>
<div>
    <h4>Statut de la consultation</h4>
    <p>
        @if (Model.IsConsulted)
        {
            <span>Le patient a été consulté.</span>
        }
        else
        {
            <span>Le patient n'a pas encore été consulté.</span>
        }
    </p>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Dossier_patient?.Code" class="btn btn-primary">
    <i class="bi bi-pencil-square"></i>
    </a> |
    <a asp-page="./Index" class="btn btn-primary">
    <i class="bi bi-arrow-return-left"></i>
    </a>
</div>
