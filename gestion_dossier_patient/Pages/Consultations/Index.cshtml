@page
@model gestion_dossier_patient.Pages_Consultations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class=" btn" style="background-color: #82e0aa;"><i class="bi bi-plus-circle-dotted"></i></a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Consultation[0].medecin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultation[0].patient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultation[0].Poids)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultation[0].Hauteur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultation[0].Diagnostique)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultation[0].Date_Consultation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Consultation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.medecin.Fullname_medecin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.patient.Fullname_patient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poids)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hauteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnostique)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Consultation)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                <i class="bi bi-pencil-square"></i>
                </a> |
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">
                <i class="bi bi-info-circle"></i>
                </a> |
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                <i class="bi bi-trash-fill"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
