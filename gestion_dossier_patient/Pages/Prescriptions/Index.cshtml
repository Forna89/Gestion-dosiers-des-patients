@page
@model gestion_dossier_patient.Pages_Prescriptions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class=" btn" style="background-color: #82e0aa;"><i class="bi bi-plus-circle-dotted"></i></a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prescription[0].consultation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prescription[0].Prescription_Text)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Prescription) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.consultation.patientCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prescription_Text)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                <i class="bi bi-pencil-square"></i>
                </a> |
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">
                <i class="bi bi-info-circle"></i>
                </a> |
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                <i class="bi bi-trash-fill"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
